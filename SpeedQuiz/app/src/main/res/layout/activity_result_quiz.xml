<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_100"
    android:backgroundTint="@color/grey_100"
    android:orientation="vertical"
    tools:context=".ResultQuiz">


        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarResult"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#003039"
                app:title="Pontuação"
                app:navigationIcon="@drawable/baseline_dehaze_white_18dp"
                app:menu="@menu/top_app_bar"
                app:popupTheme="@style/AppTheme.PopupOverlay" />


        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp">

            <ImageView
                android:id="@+id/trofeu"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginLeft="120dp"
                app:srcCompat="@drawable/baseline_emoji_events_black_18dp" />

            <TextView
                android:id="@+id/Resultado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Parabéns !"
                android:textColor="#012222"
                android:textSize="30dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="30dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/Pontuacao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pontuação:"
                    android:textColor="#012222"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/ValorPontos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="#012222"
                    android:textSize="20sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="10dp">

                <TextView
                    android:id="@+id/RespCorretas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Respostas Corretas:"
                    android:textColor="#012222"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/ValorCorretas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="#012222"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="10dp">

                <TextView
                    android:id="@+id/RespErradas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Respostas Erradas:"
                    android:textColor="#012222"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/ValorErradas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="#012222"
                    android:textSize="20sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="10dp">

                <TextView
                    android:id="@+id/Ranking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ranking:"
                    android:textColor="#012222"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/ValorRanking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="#012222"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">


        <Button
            android:id="@+id/button2"
            style="@android:style/Widget.Material.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="40dp"
            android:layout_weight="1"
            android:background="#F14F03"
            android:backgroundTint="#F14F03"
            android:padding="10dp"
            android:text="Leaderboard" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floating_action_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:backgroundTint="#07B177"
            android:padding="20dp"
            app:srcCompat="@drawable/com_facebook_button_like_icon_selected" />

    </LinearLayout>
</LinearLayout>